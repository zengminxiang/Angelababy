<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    >
    <include layout="@layout/layout_title"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:text="与女神电话互动，聊聊2分钟人生"
        android:textColor="#f7c11f" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:textSize="25sp"
        android:gravity="center"
        android:text="服务费只需1.99元/次"
        android:textColor="#f7c11f" />


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20px"
        android:layout_height="wrap_content">

        <com.zmx.angelababy.utils.view.ImageViewUtil
            android:id="@+id/head"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_centerInParent="true"
            android:src="@mipmap/background" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerInParent="true"
            android:background="@mipmap/video" />

    </RelativeLayout>


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="夏卍初™秋♐冷"
        android:textColor="#f7c11f" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="或南或北，岁月不及你，森崎"
        android:textColor="#8f1ff7" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="职业：学生     年龄：21岁"
        android:textColor="#f7c11f" />

    <Button
        android:id="@+id/chat_button"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="44px"
        android:layout_marginRight="44px"
        android:layout_marginTop="20px"
        android:background="@drawable/buttonstyle"
        android:text="立即支付"
        android:textColor="#ffffff" />

</LinearLayout>